{% extends 'base.html.twig' %}

{% block title %}Quai Antique - Modification de l'utilisateur
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="title">MODIFICATION DU PROFIL</h1>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4 flash-success">
				{{ message }}
			</div>
		{% endfor %}
		<div class="form">
			{{ form_start(form) }}
			{{ form_row(form.email) }}
			{{ form_row(form.firstname) }}
			{{ form_row(form.lastname) }}
			{{ form_row(form.phone) }}
			<button type="submit">MODIFIER MON PROFIL</button>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
