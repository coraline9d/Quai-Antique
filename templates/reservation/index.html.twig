{% extends 'base.html.twig' %}

{% block title %}Reservation index
{% endblock %}

{% block body %}
	<h1>Reservation index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Number_of_guest</th>
				<th>Hour</th>
				<th>Date</th>
				<th>Allergy</th>
				<th>Created_at</th>
				<th>Updated_at</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reservation in reservations %}
				<tr>
					<td>{{ reservation.id }}</td>
					<td>{{ reservation.numberOfGuest }}</td>
					<td>{{ reservation.hour ? reservation.hour|date('H:i:s') : '' }}</td>
					<td>{{ reservation.date ? reservation.date|date('Y-m-d') : '' }}</td>
					<td>{{ reservation.allergy|join(', ') }}</td>
					<td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ reservation.updatedAt ? reservation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
						<a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_reservation_new') }}">Create new</a>
{% endblock %}
